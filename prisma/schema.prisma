
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

// Database models
model User {
         id   Int      @id @default(autoincrement())
   username   String   @unique
      email   String   @unique
  firstName   String
   lastName   String
   password   String
       role   String   @default("user")
      image   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

     groups   Group[]  @relation("Owner")
   memberOf   Member[] @relation("Member")
}


model Group {
           id Int      @id @default(autoincrement())
         name String   @unique
  description String
  
        owner User     @relation("Owner", fields: [ownerId], references: [id], onDelete: Cascade)
      ownerId Int
      members Member[] @relation("Group")
}


model Member {
  id          Int      @id @default(autoincrement())
  user        User     @relation("Member", fields: [userId], references: [id], onDelete: Cascade)
  userId      Int

  group       Group    @relation("Group", fields: [groupId], references: [id], onDelete: Cascade)
  groupId     Int      
}

